{{#if hasDropDown}}
  {{#power-select
    triggerComponent=(
      component 'intl-phone-input/flag-trigger'
    )
    options=countryOptions
    tagName="div"
    class="ember-intl-phone-input__select"
    concatenatedTriggerClasses="ember-intl-phone-input__trigger"
    selected=selected
    disabled=disabled
    onchange=(action "countryChanged")
    matchTriggerWidth=false
    searchEnabled=searchEnabled
    matcher=matcher
  as |country|
  }}

    {{intl-phone-input/select-option
      class="ember-intl-phone-input__select-option"
      country=(readonly country)
    }}

  {{/power-select}}
{{/if}}

{{#if hasBlock}}
  {{yield context}}
{{else}}
  {{input
    class=inputClassName
    type=type
    disabled=disabled
    autocomplete=autocomplete
    autocorrect="off"
    autocapitalize="off"
    spellcheck="false"
    value=value
    placeholder=placeholder
    change=(action "valueChanged" value)
    keyUp=(action "keyUpInput" value)
  }}
{{/if}}
