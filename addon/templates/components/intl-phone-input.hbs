{{#if hasDropDown}}
  {{#power-select
    triggerComponent=(
      component 'intl-phone-input/flag-trigger'
    )
    options=countryOptions
    tagName="div"
    class="ember-intl-phone-input__select"
    concatenatedTriggerClasses="ember-intl-phone-input__trigger"
    selected=selectedCountryObj
    disabled=disabled
    onchange=(action "countryChanged")
    matchTriggerWidth=false
    searchEnabled=searchEnabled
    searchField="name"
  as |country|
  }}

    {{intl-phone-input/select-option
      class="ember-intl-phone-input__select-option"
      country=(readonly country)
    }}

  {{/power-select}}
{{/if}}

{{#if hasBlock}}
  {{yield (
      hash
        value=value
        country=country
      )
  }}
{{else}}
  {{input
    class=inputClassName
    type=type
    disabled=disabled
    autocomplete=autocomplete
    autocorrect="off"
    autocapitalize="off"
    spellcheck="false"
    value=formattedValue
    placeholder=placeholder
    change=(action "valueChanged" formattedValue)
    keyUp=(action "keyUpInput" formattedValue)
    focus-in=(action "onFocusInput")
    focus-out=(action "onBlurInput")
  }}
{{/if}}
